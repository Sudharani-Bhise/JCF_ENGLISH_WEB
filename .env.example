# Database & auth
MONGO_URI=
JWT_SECRET=

# Razorpay (optional - not required for demo)
# Razorpay is NOT enabled by default. The project runs in demo-only payment mode
# controlled by `DEMO_PAYMENTS=true` below. If you later want real payments, add
# the following to your backend .env (DO NOT commit secrets):
# RAZORPAY_KEY_ID=rzp_test_xxx
# RAZORPAY_KEY_SECRET=yyyyyy
# And add `VITE_RAZORPAY_KEY_ID=rzp_test_xxx` to your frontend `.env` at build time (optional)
# For now, leave these unset to keep demo flow active.

# Twilio (for SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=

# SMTP (for emails)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Development helpers
DEBUG_OTP=true # Set to true in dev to return OTP in API responses for testing
DEMO_PAYMENTS=true # Set to true to force demo-only payments (no real gateway calls)
NODE_ENV=development
PORT=4000
